# Jeju Storage - Environment Variables
# =====================================
# Copy to .env and fill in your values.
# Network config is loaded from @jejunetwork/config.

# === REQUIRED: Provider Wallet ===
PRIVATE_KEY=

# === OPTIONAL: Cloud Storage Backends ===
# Configure one or more cloud backends for redundant storage.

# Vercel Blob (https://vercel.com/docs/storage/vercel-blob)
BLOB_READ_WRITE_TOKEN=

# AWS S3
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Cloudflare R2
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=

# Arweave (permanent storage)
ARWEAVE_WALLET_JSON=

# === OPTIONAL: Database ===
DATABASE_URL=postgresql://localhost:5432/jeju_storage

# === OVERRIDES (usually not needed) ===
# JEJU_NETWORK=localnet
# STORAGE_PORT=3100
# STORAGE_BACKEND=ipfs  # ipfs | local | cloud
