{
  "name": "squid",
  "version": "1.0.0",
  "description": "Comprehensive blockchain indexer for Jeju L2",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "dev": "concurrently --kill-others \"npm run db:up\" \"npm run process:dev\" \"npm run api:dev\"",
    "start": "npm run process",
    "db:up": "sqd up",
    "db:down": "sqd down",
    "db:migrate": "sqd migration:apply",
    "db:reset": "npm run db:down && npm run db:up && sleep 3 && docker exec squid-db-1 psql -U postgres -c 'CREATE DATABASE indexer;' && npm run db:migrate",
    "process": "sqd process",
    "process:dev": "sleep 5 && sqd process",
    "api": "sqd serve",
    "api:dev": "sleep 10 && sqd serve",
    "codegen": "sqd codegen",
    "migrate:generate": "sqd migration:generate",
    "migrate:apply": "sqd migration:apply",
    "migrate:clean": "sqd migration:clean",
    "test": "npm run test:data",
    "test:data": "chmod +x test-real-data.sh && ./test-real-data.sh",
    "test:e2e": "chmod +x test/e2e.test.sh && ./test/e2e.test.sh",
    "test:integration": "bun test/integration.test.ts",
    "verify": "npm run test:data"
  },
  "dependencies": {
    "@subsquid/evm-abi": "^0.3.0",
    "@subsquid/evm-processor": "^1.19.1",
    "@subsquid/graphql-server": "^4.6.0",
    "@subsquid/typeorm-migration": "^1.3.0",
    "@subsquid/typeorm-store": "^1.5.1",
    "dotenv": "^16.4.5",
    "pg": "^8.12.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@subsquid/typeorm-codegen": "^2.0.2",
    "@types/node": "^20.16.5",
    "concurrently": "^8.2.2",
    "typescript": "^5.6.2"
  }
}
