{
  "name": "jeju-l3",
  "version": "0.1.0",
  "description": "OP-Stack L3 settling on Base with Flashblocks, EigenDA, and complete DeFi stack",
  "type": "module",
  "scripts": {
    "postinstall": "cd indexer && bun install",
    "dev": "bun run scripts/dev.ts",
    "start": "bun run scripts/start-testnet.ts",
    "localnet:start": "bun run scripts/localnet/start.ts",
    "localnet:stop": "bun run scripts/localnet/stop.ts",
    "localnet:reset": "bun run scripts/localnet/reset.ts",
    "localnet:logs": "kurtosis service logs jeju-localnet",
    "indexer:dev": "cd indexer && bun run dev",
    "indexer:build": "cd indexer && bun run build",
    "indexer:migrate": "cd indexer && npx sqd migration:apply",
    "indexer:test": "cd indexer && ./test-real-data.sh",
    "contracts:install": "cd contracts && make install",
    "contracts:build": "cd contracts && forge build",
    "contracts:test": "cd contracts && forge test",
    "deploy:l1:testnet": "bun run scripts/deploy/l1-contracts.ts --network testnet",
    "deploy:l1:mainnet": "bun run scripts/deploy/l1-contracts.ts --network mainnet",
    "deploy:genesis:testnet": "bun run scripts/deploy/l2-genesis.ts --network testnet",
    "deploy:genesis:mainnet": "bun run scripts/deploy/l2-genesis.ts --network mainnet",
    "deploy:aa": "bun run scripts/deploy/account-abstraction.ts",
    "deploy:defi": "bun run scripts/deploy/defi-protocols.ts",
    "deploy:testnet": "bun run scripts/deploy/testnet.ts",
    "deploy:mainnet": "bun run scripts/deploy/mainnet.ts",
    "verify:testnet": "bun run scripts/verify/verify-testnet.ts",
    "verify:mainnet": "bun run scripts/verify/verify-mainnet.ts",
    "monitoring:dashboards": "bun run scripts/monitoring/sync-dashboards.ts",
    "monitoring:alerts": "bun run scripts/monitoring/sync-alerts.ts",
    "config:validate": "bun run scripts/validate-config.ts",
    "helm:validate": "bun run scripts/validate-helm-charts.ts",
    "verify": "bun run scripts/verify-complete-stack.ts",
    "test": "bun run scripts/test-all.ts",
    "test:integration": "bun test --timeout 60000 tests/integration",
    "test:e2e": "bun test --timeout 120000 tests/e2e",
    "typecheck": "tsc --noEmit",
    "k8s:diff": "helmfile -f kubernetes/helmfile/helmfile.yaml diff",
    "k8s:sync": "helmfile -f kubernetes/helmfile/helmfile.yaml sync",
    "k8s:localnet": "helmfile -e localnet -f kubernetes/helmfile/helmfile.yaml sync",
    "k8s:testnet": "helmfile -e testnet -f kubernetes/helmfile/helmfile.yaml sync",
    "k8s:mainnet": "helmfile -e mainnet -f kubernetes/helmfile/helmfile.yaml sync",
    "docs:dev": "vitepress dev documentation",
    "docs:build": "vitepress build documentation",
    "docs:preview": "vitepress preview documentation"
  },
  "dependencies": {
    "@eth-optimism/sdk": "^3.2.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@safe-global/safe-core-sdk": "^3.3.5",
    "@synthetixio/v3-contracts": "latest",
    "@uniswap/v4-core": "latest",
    "ethers": "^6.11.1",
    "viem": "^2.7.15",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}


