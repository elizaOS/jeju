{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "ipfs",
  "displayName": "Jeju IPFS Storage Service",
  "version": "1.0.0",
  "type": "core",
  "description": "Decentralized file storage with local IPFS nodes, x402 micropayments, and A2A agent integration. Replace Pinata/Infura with self-hosted infrastructure.",
  "commands": {
    "dev": "bun run pinning-api/src/index.ts",
    "build": "cd pinning-api && bun run build",
    "start": "bun run pinning-api/dist/index.js"
  },
  "ports": {
    "main": 3100,
    "ipfsNode": 4100,
    "ipfsGateway": 8080,
    "ipfsSwarm": 4101
  },
  "dependencies": ["contracts", "config"],
  "optional": true,
  "enabled": true,
  "autoStart": false,
  "tags": ["storage", "ipfs", "files", "x402", "micropayments", "infrastructure", "a2a"],
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/a2a",
    "tags": ["jeju-app", "storage", "ipfs", "files"],
    "metadata": {
      "category": "storage",
      "provider": "jeju-network"
    },
    "trustModels": ["open"],
    "x402Support": true
  }
}

