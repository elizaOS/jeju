{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "types": ["bun-types", "node"],
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["../../../types/*"]
    }
  },
  "include": ["src/**/*", "../../../types/**/*"],
  "exclude": ["node_modules", "dist"]
}
